.uni-list {
    background-color: #fff;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    position: relative
}

.uni-list--border {
    position: relative;
    z-index: -1
}

.uni-list--border-top {
    top: 0;
    z-index: 1
}

.uni-list--border-bottom,.uni-list--border-top {
    background-color: #e5e5e5;
    height: 1px;
    left: 0;
    position: absolute;
    right: 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5)
}

.uni-list--border-bottom {
    bottom: 0
}
